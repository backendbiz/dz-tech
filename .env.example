# MongoDB Connection
DATABASE_URI=mongodb://localhost:27017/consulting-cms

# Payload Secret (minimum 32 characters)
PAYLOAD_SECRET=your-super-secret-key-min-32-characters-long

# Site URLs
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ISR Revalidation Secret
REVALIDATION_SECRET=your-revalidation-secret

# Optional: S3/R2 Storage
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_REGION=us-east-1

# Optional: Email (Resend)
RESEND_API_KEY=your-resend-api-key

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOKS_ENDPOINT_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Optional: Dedicated encryption key for per-service Stripe keys
# If not set, PAYLOAD_SECRET will be used for encryption
# STRIPE_ENCRYPTION_KEY=your-32-character-encryption-key
